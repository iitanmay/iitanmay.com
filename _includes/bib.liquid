<div class="pub-item" style="display:flex; align-items:center; gap:20px; margin-bottom:30px;">

  {% if entry.image %}
  <div class="pub-image" style="flex:0 0 120px;">
    <a href="{{ entry.url }}" target="_blank">
      <img src="{{ entry.image | relative_url }}" alt="{{ entry.title }}" style="max-width:120px; border-radius:8px;">
    </a>
  </div>
  {% endif %}

  <div class="pub-text" style="flex:1;">
    <p class="pub-title" style="font-weight:bold; margin-bottom:5px;">
      {% if entry.url %}
      <a href="{{ entry.url }}" target="_blank" style="text-decoration:none; color:inherit;">
        {{ entry.title }}
      </a>
      {% else %}
        {{ entry.title }}
      {% endif %}
    </p>

    <p class="pub-authors" style="margin-bottom:5px;">
      {{ entry.author }}
    </p>

    {% if entry.journal %}
    <p class="pub-journal" style="font-style:italic; margin-bottom:5px;">
      {{ entry.journal }}
    </p>
    {% endif %}

    <p class="pub-meta" style="color:gray; font-size:0.9em;">
      {% if entry.type %}<strong>{{ entry.type }}</strong>, {% endif %}
      {{ entry.year }}
    </p>
  </div>
</div>

